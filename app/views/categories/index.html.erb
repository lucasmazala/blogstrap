<h1><%= t Category.model_name.human(count: 2)%></h1> <!--aula 26 18 min-->
<p>
  <%= link_to t('categories.new.title', model: Category.model_name.human), new_category_path, 
    class: 'btn btn-primary' if policy(:category).new? %> <!--aula 15 1:22 min  e aula 26 40:35min-->
</p>
<table class = 'table table-striped table-hover table-bordered' >
  <thead>
    <tr>
      <th><strong><%= t Category.human_attribute_name('name')%></strong></th>
      <th><strong>Actions</strong></th>
    </tr>
  </thead>

  <tbody>
      <% @categories.each do |category| %>
        <tr>
          <td><%= category.name %></td>
              <td>
                <%= link_to t('app.button.edit'), edit_category_path(category) if policy(category).edit? %> <!--É sem o @ porque é um helper-->
                <%= link_to t('app.button.destroy'), category_path(category),
            data: 
            {   turbo_method: :delete,
                turbo_confirm: t('app.message.confirm_destroy')} if policy(category).destroy?
              %>  <!--Comentários da aula 8-->
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    
