<h1>Categories</h1>
<p>
  <%= link_to 'New Category', new_category_path, class: 'btn btn-primary'%>
</p>
<table class = 'table table-striped table-hover table-bordered' >
  <thead>
    <tr>
      <th><strong>Name</strong></th>
      <th><strong>Actions</strong></th>
    </tr>
  </thead>

  <tbody>
      <% @categories.each do |category| %>
        <tr>
          <td><%= category.name %></td>
              <td>
                <%= link_to 'Edit', edit_category_path(category) %> <!--É sem o @ porque é um helper-->
                <%= link_to 'Destroy', category_path(category),
            data: 
            {   turbo_method: :delete,
                turbo_confirm: 'Are you sure'}
              %>  <!--Comentários da aula 8-->
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    
