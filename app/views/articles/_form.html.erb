<!--aula 11 gem simple_form - olhar funcionalidades https://github.com/heartcombo/simple_form-->
<%= simple_form_for article do |form| %>
  <div class="form-inputs"  >
    <%= form.input :title %>
    <%= form.input :body, input_html: {rows: 10} %>
    <%= form.association :category, collection: Category.sorted, prompt: "Choose a Category"%> <!--aula 13-->
  </div>
   <div class="form-actions"  >
    <%= form.button :submit, class: 'btn btn-primary' %>
    <%= link_to 'Back', root_path,  class: 'btn btn-secondary' %>
  </div>
<% end %>
