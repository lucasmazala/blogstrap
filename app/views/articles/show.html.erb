<article class="blog-post">
  <h2 class="display-5 link-body-emphasis mb-1"><%= @article.title%></h2>
  <p class="blog-post-meta">
  <%= month_day_comma_year(@article.created_at)%> by <%= @article.user.email%>
  </p> <!--aula 10-->
  
  <p><%= @article.body %></p>

  <%= link_to 'Edit', edit_article_path(@article), 
    class: 'btn btn-secondary' if policy(@article).update? %> <!-- sÃ³ aparece o botÃ£o se o user for o mesmo que criou o post - 56 min aula 15-->
  
  <%= link_to 'Destroy', article_path(@article),
        data: 
        {   turbo_method: :delete,
            turbo_confirm: 'Are you sure'},
            class:'btn btn-danger'  if policy(@article).destroy? %>  <!--ComentÃ¡rios da aula 8-->

    <%= link_to 'Back', root_path, class: 'btn btn-secondary' %>
</article>
