<article class="blog-post">
  <h2 class="display-5 link-body-emphasis mb-1"><%= article.title%></h2>
  <p class="blog-post-meta"><%= month_day_comma_year(article.created_at)%> by <%= article.user.email%> 
  </p> <!--aula 10-->
  
  <p><%= truncate(article.body, length: 150)%></p> <!--truncate limita a qtd de caracter que vai aparecer com o length-->

  <p><%= link_to 'Continue reading ...', article, class: 'btn btn-link' %></p>

  <%= link_to 'Edit', edit_article_path(article), 
    class: 'btn btn-secondary' if policy(article).update? %> <!--Ã‰ sem o @ porque Ã© um helper-->
  
  <%= link_to 'Destroy', article_path(article),
        data: 
        {   turbo_method: :delete,
            turbo_confirm: 'Are you sure'},
            class:'btn btn-danger' if policy(article).destroy? %>  <!--ComentÃ¡rios da aula 8-->
</article>
